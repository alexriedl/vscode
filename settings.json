{
    "files.associations": {
        "*.csproj": "msbuild",
        "appsettings.json": "jsonc"
    },

    // Plugin Settings
    "C_Cpp.intelliSenseCachePath": "~/.cache/ipch",
    "C_Cpp.intelliSenseEngine": "Default",
    "csharp.referencesCodeLens.enabled": false,
    "csharp.suppressDotnetInstallWarning": true,
    "csharp.suppressDotnetRestoreNotification": true,
    "csharp.suppressHiddenDiagnostics": false,
    "git.autofetch": false,
    "gitlab-ci-validator.gitLabURL": "https://gitlab.directsupply.cloud",
    "gitlab-ci-validator.ignoreCertificateErrors": true,
    "gitlens.codeLens.enabled": false,
    "gitlens.keymap": "none",
    "gitlens.showWhatsNewAfterUpgrades": false,
    "gitlens.views.fileHistory.enabled": true,
    "gitlens.views.lineHistory.enabled": true,
    "msbuildProjectTools.experimentalFeatures": [],
    "msbuildProjectTools.logging.seq.level": "Warning",
    "msbuildProjectTools.nuget.includePreRelease": true,
    "msbuildProjectTools.nuget.newestVersionsFirst": true,
    "omnisharp.enableRoslynAnalyzers": false,
    "shellcheck.customArgs": [ "-x" ],
    "shellcheck.disableVersionCheck": true,
    "typescript.updateImportsOnFileMove.enabled": "never",
    "typescriptHero.imports.multiLineTrailingComma": true,
    "typescriptHero.imports.multiLineWrapThreshold": 120,

    "todohighlight.toggleURI": true,
    "todohighlight.keywords": [
        {
            "text": "TODO:",
            "color": "#070",
            "backgroundColor": "#FC0",
            "border": "1px solid #000",
            "borderRadius": "2px"
        },
        {
            "text": "NOTE:",
            "color": "#000",
            "backgroundColor": "#0C0",
            "border": "1px solid #000",
            "borderRadius": "2px"
        },
        {
            "text": "IMPORTANT:",
            "color": "#FFF",
            "backgroundColor": "#F00",
            "border": "1px solid #000",
            "borderRadius": "2px",
            "isWholeLine": true
        },
        {
            "text": "@GAP",
            "color": "#FFF",
            "backgroundColor": "purple",
            "border": "1px solid #000",
            "borderRadius": "2px",
            "isWholeLine": true
        },
        {
            "text": "@CLEANUP",
            "color": "#FFF",
            "backgroundColor": "purple",
            "border": "1px solid #000",
            "borderRadius": "2px",
            "isWholeLine": true
        },
        {
            "text": "tslint:disable",
            "color": "#FFF",
            "backgroundColor": "#000",
            "border": "1px solid #FC0",
            "borderRadius": "2px",
            "isWholeLine": true
        }
    ],

    "extensions.autoUpdate": false,
    "extensions.ignoreRecommendations": true,
    "extensions.showRecommendationsOnlyOnDemand": true,

    // Editor Stuffs
    "breadcrumbs.enabled": true,
    "debug.inlineValues": true,
    "debug.toolBarLocation": "docked",
    "diffEditor.renderSideBySide": true,
    "editor.autoClosingBrackets": "never",
    "editor.codeLens": true,
    "editor.fontFamily": "'Consolas', 'Droid Sans Mono', 'Courier New', monospace, 'Droid Sans Fallback'",
    "editor.fontSize": 12,
    "editor.lineNumbers": "on",
    "editor.minimap.enabled": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.renderIndentGuides": false,
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [ 120 ],
    "editor.showFoldingControls": "always",
    "editor.tabSize": 2,
    "editor.wordWrap": "on",
    "emmet.showAbbreviationSuggestions": false,
    "emmet.showExpandedAbbreviation": "never",
    "emmet.showSuggestionsAsSnippets": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "window.closeWhenEmpty": true,
    "window.menuBarVisibility": "hidden",
    "window.newWindowDimensions": "maximized",
    "window.title": "${dirty}${rootName}${separator}${activeEditorShort}",
    "window.titleBarStyle": "native",
    "window.zoomLevel": 0,
    "workbench.colorTheme": "Gruvbox Dark Hard",
    "workbench.editor.enablePreview": true,
    "workbench.editor.enablePreviewFromQuickOpen": true,
    "workbench.editor.tabCloseButton": "off",
    "workbench.panel.defaultLocation": "right",
    "workbench.settings.editor": "json",
    "workbench.startupEditor": "none",

    // Suggestions
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.acceptSuggestionOnEnter": "off",

    // File Explorer Stuffs
    "explorer.openEditors.visible": 0,
    "files.exclude": {
        ".vs": true,
        "**/bin": true,
        "**/bower_components": true,
        "**/node_modules": true,
        "**/obj": true,
        "**/wwwroot": true,
        "**/.env": true
    },

    // Vim Settings
    "vim.autoindent": true,
    "vim.easymotion": false,
    "vim.enableNeovim": true,
    "vim.foldfix": true,
    "vim.hlsearch": true,
    "vim.leader": ",",
    "vim.neovimPath": "/usr/bin/nvim",
    "vim.sneak": false,
    "vim.textwidth": 100,
    "vim.useSystemClipboard": true,

    // Special Vim Keybindings
    "vim.visualModeKeyBindingsNonRecursive": [
        // Move on wrapped lines in an expected way
        { "before": ["k"], "after": ["g", "k"] },
        { "before": ["j"], "after": ["g", "j"] },
        // Clear vim search
        {
            "before": ["leader", "space"],
            "commands": [ ":nohl" ]
        },
        // Go to end of line with E
        { "before": ["E"], "after": ["$"] },

        {
            "before": ["g", "f"],
            "commands": [ "workbench.action.findInFiles" ]
        },
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        // Move on wrapped lines in an expected way
        { "before": ["k"], "after": ["g", "k"] },
        { "before": ["j"], "after": ["g", "j"] },

        // Save and close
        {
            "before": ["Z", "Z"],
            "commands": [
                 "workbench.action.files.save",
                 "workbench.action.closeActiveEditor"
            ]
        },

        // Clear vim search
        {
            "before": ["leader", "space"],
            "commands": [ ":nohl" ]
        },
        // Go to end of line with E
        { "before": ["E"], "after": ["$"] },

        // Switch tabs
        // (Needed here because f[ind] will switch tabs when searching for L and H)
        {
            "before": ["H"],
            "commands": [ "workbench.action.previousEditorInGroup" ]
        },
        {
            "before": ["L"],
            "commands": [ "workbench.action.nextEditorInGroup" ]
        },
        // Keep editor preview open
        {
            "before": ["leader", "c"],
            "commands": [ "workbench.action.keepEditor" ]
        },
        {
            "before": ["g", "i"],
            "commands": [ "editor.action.goToImplementation" ]
        },
        {
            "before": ["g", "r"],
            "commands": [ "editor.action.referenceSearch.trigger" ]
        },
        /*
        {
            "before": ["g", "f"],
            "after": [ "v", "a", "w" ],
            "commands": [
                "workbench.action.findInFiles",
                "search.action.refreshSearchResults",
                "extension.vim_escape",
                "search.action.focusNextSearchResult",
            ],
        },
*/
    ],

    // Terminal
    "terminal.external.linuxExec": "alacritty",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.env.linux": { "TMUX_ATTACH_TO_SESSION": "${workspaceFolderBasename}" },
    "terminal.integrated.fontFamily": "'Ubuntu Mono'",
    "terminal.integrated.commandsToSkipShell": [
        "workbench.action.terminal.rename",
        "workbench.action.closePanel",
        "workbench.files.action.focusFilesExplorer",
    ],

    // Status Bar Color
    // Gruvbox colors: https://github.com/morhetz/gruvbox/blob/master/colors/gruvbox.vim
    "vim.statusBarColorControl": false,
/*
    "vim.statusBarColors.insert": [ "#458588", "#282828" ], // Blue
    "vim.statusBarColors.normal": [ "#242120", "#ccc" ], // Dark
    "vim.statusBarColors.replace": [ "#689d6a", "#282828" ], // Aqua
    "vim.statusBarColors.visual": [ "#d65d0e", "#282828" ], // Orange
    "vim.statusBarColors.visualblock": [ "#d65d0e", "#282828" ], // Orange
    "vim.statusBarColors.visualline": [ "#d65d0e", "#282828" ], // Orange
*/

    // StatusBar settings are forced by vim if the above setting is used
    "workbench.colorCustomizations": {
        "statusBar.background": "#242120",
        "statusBar.noFolderBackground": "#242120",
        "statusBar.debuggingBackground": "#242120",
        "statusBar.foreground": "#ccc"
    },

    // Settings forced by vscode/plugins
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressResultsExplorerNotice": false,
        "suppressShowKeyBindingsNotice": true,
        "suppressUpdateNotice": true,
        "suppressWelcomeNotice": true
    }
}
