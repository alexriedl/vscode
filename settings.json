// Place your settings in this file to overwrite the default settings
{
    //Plugin Settings
    "vsicons.dontShowNewVersionMessage": true,
    "typescript.check.tscVersion": false,

    //Set size of font
    "editor.fontSize": 12,

     //Use bash instead of windows cmd
    "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",

    //Editor Stuffs
    "editor.wordWrap": true,
    "files.trimTrailingWhitespace": true,

    //File Explorer Stuffs
    "explorer.openEditors.visible": 5,
    "files.exclude": {
        "bin": true,
        "obj": true
    },

    //Vim Setting
    "editor.cursorBlinking": "blink",       //Vim Plugin forces this setting
    "vim.hlsearch": true,
    "vim.leader": ",",
    "vim.useSystemClipboard": true,
    "vim.otherModesKeyBindingsNonRecursive": [
        //Move on wrapped lines correctly
        {
            "before": ["k"],
            "after": ["g", "k"]
        },
        {
            "before": ["j"],
            "after": ["g", "j"]
        },
        //Goto End of line with 'E'
        {
            "before": ["E"],
            "after": ["$"]
        },
        //Scroll to center cursor in screen with 'z.'
        {
            "before": ["z", "."],
            "after": ["z", "z"]
        },
        //Use ZZ to save and close (Doesnt seem to work)
        {
            "before": ["Z", "Z"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.files.save",
                    "args": []
                },
                {
                    "command": "workbench.action.closeActiveEditor",
                    "args": []
                }
            ]
        }
    ]
}