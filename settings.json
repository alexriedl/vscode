// Place your settings in this file to overwrite the default settings
{
    // Plugin Settings
    "typescript.check.tscVersion": false,
    "vsicons.dontShowNewVersionMessage": true,
    "haskell.ghcMod.executablePath": "ghc-mod",

    // Various
    "git.autofetch": false,
    "window.menuBarVisibility": "toggle",
    "editor.fontFamily": "'Consolas', 'Droid Sans Mono', 'Courier New', monospace, 'Droid Sans Fallback'",
    "debug.inlineValues": true,

    // Terminal
    //"terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
    "terminal.external.linuxExec": "alacritty",
    "terminal.integrated.cursorBlinking": true,

    // Editor Stuffs
    "workbench.colorTheme": "Flatland Monokai",
    "workbench.iconTheme": "vscode-icons",
    "editor.fontSize": 12,
    "editor.codeLens": true,
    "editor.wordWrap": "on",
    "editor.renderWhitespace": "boundary",
    "editor.autoClosingBrackets": false,
    "editor.rulers": [120],
    "files.trimTrailingWhitespace": true,
    "workbench.editor.tabCloseButton": "off",

    "diffEditor.renderSideBySide": true,

    // Suggestions
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.acceptSuggestionOnEnter": false,

    // File Explorer Stuffs
    "explorer.openEditors.visible": 5,
    "files.exclude": {
        "**/bin": true,
        "**/obj": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/wwwroot": true
    },

    "search.exclude": {
        "**/bin": true,
        "**/obj": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/wwwroot": true
    },

    // Vim Setting
    "editor.cursorStyle": "block",
    "editor.cursorBlinking": "solid",
    "vim.useSolidBlockCursor": false,
    "vim.autoindent": false,
    "vim.hlsearch": true,
    "vim.leader": ",",
    "vim.useSystemClipboard": true,
    "vim.otherModesKeyBindingsNonRecursive": [
        // Move on wrapped lines correctly
        // Visual mode is broken with this on
        /*
        {
            "before": ["k"],
            "after": ["g", "k"]
        },
        {
            "before": ["j"],
            "after": ["g", "j"]
        },
        */
        // Scroll to center cursor in screen with 'z.'
        {
            "before": ["z", "."],
            "after": ["z", "z"]
        },
        // Save and close
        {
            "before": ["Z", "Z"],
            "commands": [
                {
                    "command": "workbench.action.files.save"
                },
                {
                    "command": "workbench.action.closeActiveEditor"
                }
            ]
        },
        // Clear vim search
        {
            "before": ["leader", "space"],
            "after": ["/", "escape"]
        },
        // Go to end of line with E
        {
            "before": ["E"],
            "after": ["$"]
        },
        // Switch tabs
        // (Needed here because f[ind] will switch tabs when searching for L and H)
        {
            "before": ["H"],
            "commands": [
                {
                    "command": "workbench.action.previousEditorInGroup"
                }
            ]
        },
        {
            "before": ["L"],
            "commands": [
                {
                    "command": "workbench.action.nextEditorInGroup"
                }
            ]
        },
        // Go to Delcaration
        {
            "before": ["leader", "d"],
            "commands": [
                {
                    "command": "editor.action.goToDeclaration"
                }
            ]
        },
        // Go to Implementation
        {
            "before": ["leader", "i"],
            "commands": [
                {
                    "command": "editor.action.goToImplementation"
                }
            ]
        },
        // Keep editor preview open
        {
            "before": ["leader", "c"],
            "commands": [
                {
                    "command": "workbench.action.keepEditor"
                }
            ]
        },
        // Fix line above when using sized 2 tabs (Temporary fix until this bug resolved)
        {
            "before": ["O"],
            "commands": [
                {
                    "command": "editor.action.insertLineBefore"
                }
            ],
            "after": ["i"]
        }
    ]
}
