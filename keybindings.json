// Place your key bindings in this file to overwrite the defaults
[
    // 'Normal' keybindings
    { "key": "ctrl+shift+s", "command": "workbench.action.files.saveAll" },
    { "key": "ctrl+-",       "command": "workbench.action.navigateBack" },
    { "key": "ctrl+shift+-", "command": "workbench.action.navigateForward" },
    { "key": "alt+enter",    "command": "editor.action.quickFix",
                                "when": "editorHasCodeActionsProvider && editorTextFocus && !editorReadonly" },
    { "key": "ctrl+.",       "command": "editor.action.triggerParameterHints",
                                "when": "editorHasSignatureHelpProvider && editorTextFocus" },

    // Restart Omnisharp
    { "key": "ctrl+shift+r", "command": "o.restart" },

    // vim specific keybindings
    { "key": "ctrl+h", "command": "workbench.action.navigateLeft" },
    { "key": "ctrl+l", "command": "workbench.action.navigateRight" },
    { "key": "ctrl+j", "command": "workbench.action.navigateDown" },
    { "key": "ctrl+k", "command": "workbench.action.navigateUp" },

    { "key": "ctrl+c", "command": "workbench.action.closePanel" },
    { "key": "ctrl+t", "command": "workbench.action.showAllSymbols" },

    { "key": "ctrl+s", "command": "editor.action.sortLinesAscending",
                          "when": "editorFocus && !editorReadonly" },

    { "key": "alt+l", "command": "editor.action.marker.next",
                         "when": "editorFocus && !editorReadonly" },
    { "key": "alt+h", "command": "editor.action.marker.prev",
                         "when": "editorFocus && !editorReadonly" },

    { "key": "alt+j", "command": "macros.fastMoveDown",
                         "when": "editorFocus" },
    { "key": "alt+k", "command": "macros.fastMoveUp",
                         "when": "editorFocus" },

    // File explorer
    { "key": "j",       "command": "list.focusDown",
                           "when": "listFocus" },
    { "key": "k",       "command": "list.focusUp",
                           "when": "listFocus" },
    { "key": "s",       "command": "explorer.openToSide",
                           "when": "listFocus" },
    { "key": "m a",     "command": "explorer.newFile",
                           "when": "explorerViewletFocus && explorerViewletVisible" },
    { "key": "m f",     "command": "explorer.newFolder",
                           "when": "explorerViewletFocus && explorerViewletVisible" },
    { "key": "m m",     "command": "renameFile",
                           "when": "explorerViewletFocus && explorerViewletVisible" },
    { "key": "m d",     "command": "moveFileToTrash",
                           "when": "explorerViewletFocus && explorerViewletVisible" },
    { "key": "m d",     "command": "deleteFile",
                           "when": "explorerViewletFocus && explorerViewletVisible" },
    { "key": "x",       "command": "list.collapse",
                           "when": "listFocus" },
    { "key": "shift+x", "command": "workbench.files.action.collapseExplorerFolders",
                           "when": "explorerViewletFocus && explorerViewletVisible" },
    { "key": "g g",     "command": "list.focusFirst",
                           "when": "explorerViewletFocus && explorerViewletVisible" },
    { "key": "shift+g", "command": "list.focusLast",
                           "when": "explorerViewletFocus && explorerViewletVisible" },
    { "key": "m c",     "command": "macros.duplicateFile",
                           "when": "explorerViewletFocus && explorerViewletVisible" },

    { "key": "ctrl+f",  "command": "workbench.files.action.focusFilesExplorer" },
    /*
    { "key": "ctrl+l",  "command": "workbench.action.focusFirstEditorGroup",
                           "when": "explorerViewletVisible && filesExplorerFocus" },
                           */

    // Suggestions
    { "key": "ctrl+j",  "command": "selectNextSuggestion",
                           "when": "editorTextFocus && suggestWidgetMultipleSuggestions && suggestWidgetVisible" },
    { "key": "ctrl+k",  "command": "selectPrevSuggestion",
                           "when": "editorTextFocus && suggestWidgetMultipleSuggestions && suggestWidgetVisible" },

/*
    { "key": "ctrl+j",  "command": "showNextParameterHint",
                           "when": "editorTextFocus && parameterHintsMultipleSignatures && parameterHintsVisible" },
    { "key": "ctrl+k",  "command": "showPrevParameterHint",
                           "when": "editorTextFocus && parameterHintsMultipleSignatures && parameterHintsVisible" },
                           */

    { "key": "ctrl+j",  "command": "workbench.action.quickOpenNavigateNext",
                           "when": "inQuickOpen" },
    { "key": "ctrl+k",  "command": "workbench.action.quickOpenNavigatePrevious",
                           "when": "inQuickOpen" },

    // Remove Keybindings
    { "key": "ctrl+j", "command": "-workbench.action.togglePanel" }
]
